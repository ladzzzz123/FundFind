<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.sbaloan"
    android:versionCode="6"
    android:versionName="2.0">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/money_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".activities.Main"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SBALoanList"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="@string/fund_search_results_name"></activity>
        <activity
            android:name=".activities.SBALoanView"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="@string/fund_details_name"></activity>
    </application>
</manifest>