<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.sbaloan"
    android:versionCode="5"
    android:versionName="1.3.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bank_icon"
        android:label="@string/app_name" >
        <activity
            android:name="app.sbaloan.activities.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.sbaloan.activities.SBALoanList"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="app.sbaloan.activities.SBALoanView"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="app.sbaloan.SBALoanSavedList"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>