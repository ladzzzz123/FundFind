<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Search Criteria: " />

        <com.andexert.expandablelayout.library.ExpandableLayout
            android:id="@+id/areasSection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:el_headerLayout="@layout/expandable_areas_header"
            app:el_contentLayout="@layout/expanable_areas_view"
            android:background="@color/colorContentBackground" />

        <com.andexert.expandablelayout.library.ExpandableLayout
            android:id="@+id/industriesSection"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_headerLayout="@layout/expandable_industries_header"
            app:el_contentLayout="@layout/expanable_industries_view"
            android:background="@color/colorContentBackground" />

        <com.andexert.expandablelayout.library.ExpandableLayout
            android:id="@+id/typesSection"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_headerLayout="@layout/expandable_types_header"
            app:el_contentLayout="@layout/expanable_types_view"
            android:background="@color/colorContentBackground" />

        <com.andexert.expandablelayout.library.ExpandableLayout
            android:id="@+id/miscSection"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_headerLayout="@layout/expandable_misc_header"
            app:el_contentLayout="@layout/expanable_misc_view"
            android:background="@color/colorContentBackground" />
    </LinearLayout>
</ScrollView><!-- From: file:/Users/danielmurphy/Projects/Android/SBA-Loan-Grant-App/app/src/main/res/layout/search_options_view.xml -->