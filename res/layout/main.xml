<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" android:id="@+id/textView" android:text="Do a search:"/>
<ScrollView android:id="@+id/scrollView1" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TableLayout android:id="@+id/tableLayout1" android:layout_height="wrap_content" android:weightSum="1" android:layout_width="match_parent">
        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableRow1">
            <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/textView1" android:text="State: "></TextView>
            <Spinner android:id="@+id/stateSpinner" android:layout_height="wrap_content" android:layout_width="fill_parent"></Spinner>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableRow2">
            <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/textView2" android:text="Industry: "></TextView>
            <Spinner android:id="@+id/industrySpinner" android:layout_height="wrap_content" android:layout_width="wrap_content"></Spinner>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableRow3">
            <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/textView3" android:text="Type: "></TextView>
            <Spinner android:id="@+id/typeSpinner" android:layout_height="wrap_content" android:layout_width="wrap_content"></Spinner>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableRow5">
            <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/textView5" android:text="General Purpose: "></TextView>
            <Spinner android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/genPurposeSpinner"></Spinner>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableRow6">
            <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/textView6" android:text="Development: "></TextView>
            <Spinner android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/developmentSpinner"></Spinner>
        </TableRow>
        <TableRow android:id="@+id/tableRow7" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/textView7" android:text="Exporting: "></TextView>
            <Spinner android:id="@+id/exportingSpinner" android:layout_height="wrap_content" android:layout_width="wrap_content"></Spinner>
        </TableRow>
        <TableRow android:id="@+id/tableRow8" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/textView8" android:text="Contractor: "></TextView>
            <Spinner android:id="@+id/contractorSpinner" android:layout_height="wrap_content" android:layout_width="wrap_content"></Spinner>
        </TableRow>
        <TableRow android:id="@+id/tableRow9" android:layout_width="wrap_content" android:layout_height="wrap_content"></TableRow>
        <TableRow android:id="@+id/tableRow10" android:layout_width="wrap_content" android:layout_height="wrap_content"></TableRow>
    </TableLayout>
</ScrollView>
<Button android:layout_width="wrap_content" android:id="@+id/executeBtn" android:layout_height="wrap_content" android:text="Execute"></Button>
</LinearLayout>
